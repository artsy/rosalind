#!/bin/sh

# Exit if any subcommand fails
set -e

STEPS=8

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NO_COLOR='\033[0m'
CLEAR_LINE='\r\033[K'

# STEP 1
printf "[1/${STEPS}]  checking dependencies"

if ! command -v psql > /dev/null; then
  printf "${CLEAR_LINE}${RED}  You must install postgres before setup can continue${NO_COLOR}\n"
  printf "    You should:\n"
  printf "      $ brew install postgresql\n"
  exit -1
fi

if ! command -v bundler > /dev/null; then
  printf "${CLEAR_LINE}${RED}  You must install bundler before setup can continue${NO_COLOR}\n"
  printf "    You should:\n"
  printf "      $ gem install bundler\n"
  exit -1
fi

if ! command -v yarn > /dev/null; then
  printf "${CLEAR_LINE}${RED}  You must install yarn before setup can continue${NO_COLOR}\n"
  printf "    You should:\n"
  printf "      $ brew install yarn\n"
  exit -1
fi

if ! command -v copy_env > /dev/null; then
  printf "${CLEAR_LINE}${RED}  You must install copy_env before setup can continue${NO_COLOR}\n"
  printf "    You should:\n"
  printf "      $ brew tap artsy/formulas\n"
  printf "      $ brew install copy_env\n"
  exit -1
fi

# STEP 2
printf "${CLEAR_LINE}[2/${STEPS}]  installing gems"
bundle install > /dev/null

# STEP 3
printf "${CLEAR_LINE}[3/${STEPS}]  installing packages"
yarn install > /dev/null

# STEP 4
printf "${CLEAR_LINE}[4/${STEPS}]  adding remotes"
git remote add upstream git@github.com:artsy/rosalind.git

# STEP 5
printf "${CLEAR_LINE}[5/${STEPS}]  fetching remotes"
git fetch --all --quiet > /dev/null

# STEP 6
printf "${CLEAR_LINE}[6/${STEPS}]  setting up dotenv"
copy_env hokusai

# STEP 7
printf "${CLEAR_LINE}[7/${STEPS}]  database setup"
RAILS_ENV=development bundle exec rake db:create db:migrate > /dev/null
RAILS_ENV=test bundle exec rake db:create db:migrate > /dev/null

# STEP 8
printf "${CLEAR_LINE}[8/${STEPS}]  adding pre-push git hook"
cp scripts/git.pre-push.sample .git/hooks/pre-push
chmod +x .git/hooks/pre-push

# FINISH
printf "${CLEAR_LINE}[${STEPS}/${STEPS}]${GREEN}  finished!${NO_COLOR}\n"
